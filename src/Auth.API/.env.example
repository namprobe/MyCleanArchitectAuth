# Database
CONNECTION_STRING=Server=your-server;Database=your-db;User Id=your-user;Password=your-password;TrustServerCertificate=True;

# JWT Settings
JWT_SECRET=your-secret-key
JWT_ISSUER=your-issuer
JWT_AUDIENCE=your-audience
JWT_EXPIRES_IN_MINUTES=60
REFRESH_TOKEN_EXPIRES_IN_DAYS=7

# Gmail OAuth2
GMAIL_USER_EMAIL=your-email@gmail.com
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REFRESH_TOKEN=your-refresh-token

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SYSTEM_NAME=MyCleanArchitectAuth

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# OAuth2 Redirect URI
REDIRECT_URI=http://127.0.0.1:your-port/authorize/

# Development Settings (optional)
# HOT_RELOAD_CLI=
